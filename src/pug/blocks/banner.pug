  let features = [
    {name: "estimate", text: "Фіксований кошторис", icon: "img/calc.svg"},
    {name: "no-advance", text: "Працюємо без авансів", icon: "img/money.svg"},
    {name: "report", text: "Щотижнева звітність робочого процесу", icon: "img/documents.svg"},
    {name: "in-time", text: "Здача роботи у зазначені терміни", icon: "img/time.svg"},
